<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFDA54"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- TÃ­tulo "Logros" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Logros"

            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Campo para el nombre del logro -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="20dp"
            android:text="Nombre del logro"
            android:textAlignment="viewStart"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tipoLogroTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=""
            android:paddingLeft="20dp"
            android:textAlignment="textStart"
            android:textColor="#107514"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <!-- Campo para el tiempo a cumplir -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="20dp"
            android:text="Tiempo a cumplir"
            android:textAlignment="viewStart"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tiempoSemanalTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=""
            android:paddingLeft="20dp"
            android:textAlignment="textStart"
            android:textColor="#FF0000"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

    </LinearLayout>
</androidx.cardview.widget.CardView>